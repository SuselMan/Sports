{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "rootDirs": ["src", "../shared"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@uikit/*": ["UiKit/*"]
    },
    "typeRoots": ["./node_modules/@types", "../backend/node_modules/@types"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src", "../shared", "vite.config.ts"]
}

